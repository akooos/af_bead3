{{outlet}}
{{page-header-div title=model.title}}
{{msg-balloon messages=messages}}

    <table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Felhasználónév</th>
            <th>Vezetéknév</th>
            <th>Keresztnév</th>
            <th>E-mail</th>
            <th></th>
        </tr>   
    </thead>
    <tbody>
        {{!--log model.users--}}
        {{#each model.users as |user|}}
        <tr>
            <td>{{user.username}}</td>
            <td>{{user.surname}}</td>
            <td>{{user.forename}}</td>
            <td><a href="mailto:{{user.email}}">{{user.email}}</a></td>
            <td> {{link-to "Megtekint" "users.view" user class="btn btn-default btn-sm"}}
                {{link-to "Szerkeszt" "users.edit" user class="btn btn-default btn-sm"}}
                <button {{action "delUser" user.id}} class="btn btn-default btn-sm">Töröl</button>
            
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>