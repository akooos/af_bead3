{{outlet}}
{{page-header-div title=model.title}}
{{msg-balloon messages=messages}}
<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group">
            <label for="username" class="col-lg-2 control-label">Felhasználónév</label>
            <div class="col-lg-10">
           {{input type="text" class="form-control" type="text" id="username" name="username" value=un}}
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-lg-2 control-label">Jelszó</label>
            <div class="col-lg-10">
             {{input type="password" class="form-control" type="password" id="password" name="password" value=pw}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Visszaállítás</button>
                <button id="btnSubmit" type="submit" {{action "signIn" }} class="btn btn-primary">Küldés</button>
            </div>
        </div>
    </fieldset>
</form>

<div class="list-group"> 
<button {{action "showModal" "new-user-modal" "users.signup" "user"}} class="btn btn-default">Regisztráció</button>
  
</div>


